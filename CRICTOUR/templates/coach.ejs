<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coach Information</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }
        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <center>
        <h2>Coach Information</h2>
    </center>
    <table>
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Nationality</th>
                <th>Coaching Time</th>
                <th>Image</th>
                <th>Person ID</th>
                <th>Team</th>
            </tr>
        </thead>
        <tbody>
            <% if (data && Array.isArray(data.rows)) { %>
                <% data.rows.forEach(function(umpire) { %>
                    <tr>
                        <td><%= umpire[0] %></td>
                        <td><%= umpire[1] %></td>
                        <td><%= umpire[2] %></td>
                        <td><img src="<%= umpire[3] %>" alt="Umpire Image" style="max-width: 100px;"></td>
                        <td><%= umpire[4] %></td>
                        <td><%= umpire[5] %></td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="2">No data available</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</body>
</html>
